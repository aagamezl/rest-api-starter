{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "strict": false,
    "declaration": true,
    "declarationDir": "./types",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
