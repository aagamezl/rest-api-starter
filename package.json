{
  "name": "rest-api-starter",
  "version": "1.0.0",
  "description": "REST API starter",
  "main": "bin/www/index.js",
  "type": "module",
  "scripts": {
    "coverage": "nyc --reporter=lcov ava",
    "coverage:view": "nyc ava",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix",
    "prepare": "husky install",
    "start": "node bin/www/index.js",
    "start:dev": "nodemon --inspect=0.0.0.0:9229 bin/www/index.js",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "keywords": [
    "rest",
    "api",
    "starter",
    "scaffolding"
  ],
  "author": "Álvaro José Agámez Licha",
  "license": "MIT",
  "devDependencies": {
    "ava": "^5.1.0",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "pino-tee": "^0.3.0",
    "sinon": "^15.0.0",
    "snazzy": "^9.0.0",
    "standard": "^17.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.7.0",
    "joi-to-swagger": "^6.2.0",
    "pino": "^8.7.0",
    "swagger-ui-express": "^4.6.0"
  }
}
