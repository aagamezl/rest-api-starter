{
  "name": "rest-api-starter",
  "version": "1.0.0",
  "description": "REST API starter",
  "main": "bin/www/index.js",
  "type": "module",
  "scripts": {
    "app:init": "npm i && npx prisma init && rm .env",
    "app:setup": "npx prisma generate",
    "coverage:view": "c8 --reporter=html --reporter=text ava",
    "coverage": "c8 --reporter=lcov ava",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix",
    "prepare": "husky install",
    "start": "node bin/www/index.js",
    "start:dev": "node --inspect=0.0.0.0:9229 --watch bin/www/index.js",
    "test": "ava",
    "test:watch": "ava --watch",
    "migrate:generate": "drizzle-kit generate",
    "migrate:run": "node src/migrate.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "rest",
    "api",
    "starter",
    "scaffolding"
  ],
  "author": "Álvaro José Agámez Licha",
  "license": "MIT",
  "devDependencies": {
    "@types/sinon": "^17.0.3",
    "ava": "^6.1.3",
    "c8": "^10.1.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.22.7",
    "husky": "^9.0.11",
    "sinon": "^18.0.0",
    "snazzy": "^9.0.0",
    "standard": "^17.1.0",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "@fastify/compress": "^7.0.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/csrf-protection": "^6.4.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "drizzle-orm": "^0.31.2",
    "drizzle-typebox": "^0.1.1",
    "fastify": "^4.28.0",
    "http-status-codes": "^2.3.0",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.1",
    "pino-tee": "^0.3.0",
    "postgres": "^3.4.4"
  }
}
